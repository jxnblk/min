{
  "name": "hot-min",
  "version": "1.0.0",
  "description": "Bare minimum React + webbpack + hot loader",
  "scripts": {
    "clean": "rm -rf dist/*",
    "build": "BASE_URL=/min webpack -p --progress --colors",
    "gh-pages": "git subtree push --prefix dist/min origin gh-pages",
    "start": "webpack-dev-server --progress --colors --config webpack.dev.config.js"
  },
  "author": "Brent Jackson",
  "license": "MIT",
  "dependencies": {
    "babel-loader": "^5.3.2",
    "css-loader": "^0.16.0",
    "normalize.css": "^3.0.3",
    "raw-loader": "^0.5.1",
    "react": "^0.13.3",
    "react-hot-loader": "^1.2.8",
    "react-router": "^1.0.0-beta3",
    "serialize-javascript": "^1.0.0",
    "static-render-webpack-plugin": "^0.1.2",
    "style-loader": "^0.12.3",
    "webpack": "^1.11.0",
    "webpack-dev-server": "^1.10.1"
  }
}
